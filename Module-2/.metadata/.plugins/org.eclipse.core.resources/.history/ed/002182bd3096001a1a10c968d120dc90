
public class Main {

	public static void main(String[] args) {	
		
		//Word test = new Word();
		//System.out.println(test);

		parseSentence();
		
	
	
	
	} //end main()
	
	public static void parseSentence() {
		String p = "Once upon a midnight dreary, while I pondered, weak and weary,\n" + 
				"Over many a quaint and curious volume of forgotten lore—\n" + 
				"While I nodded, nearly napping, suddenly there came a tapping,\n" + 
				"As of some one gently rapping, rapping at my chamber door.\n" + 
				"\"'Tis some visitor,\" I muttered, \"tapping at my chamber door—\n" + 
				"Only this and nothing more.\"" + "\n\n";
		
		String[] par = p.split("\\s+");
		
		
		//Parsing the sentence
		
		for (int i = 0; i < par.length; i++)
			par[i] = par[i].replaceAll("[^\\w]", "").toLowerCase();
		
		System.out.println("Total words found:" + par.length + "\n");
		
		//Printing array 
		
		System.out.println("\n\n\nAfter\n\n");
		
		for(int i = 0; i < par.length; i++)
			System.out.println(par[i].toString());
		} //end outer for
		
	//System.out.println(finalCount);
		
		
		
		
		//Sorting finalCount
		
		
		//Printing the final count

					
			
		

	
	
	
	
	public static boolean isDuplicate(Word w1, Word w2) {
		
		boolean result = false;
		
		if(w1.getText().compareTo(w2.getText()) == 0)
			result = true;
		
		return result;
	}
	
	

} //End Main
