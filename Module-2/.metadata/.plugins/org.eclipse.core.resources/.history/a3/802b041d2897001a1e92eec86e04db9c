import java.io.File;
import java.util.*;

public class ReadFile {
	private Scanner x;

	public void openFile() {
		try {
			Scanner x = new Scanner(new File("Poem.txt"));
		} catch (Exception e) {
			System.out.println("FILE NOT FOUND!");
		}
	} // end openFile()
	
	public String[] toArray() {
		String[] result = new String[1000];
		int i = 0;
		while(x.hasNext()) {
			result[i] = x.next();
		}
		
		return result;
	}

}// end ReadFile
